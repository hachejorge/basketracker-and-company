<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="vertical"
            android:background="@drawable/border_header"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:visibility="visible"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Â¿Que prueba quieres ejecutar?"
                android:layout_marginTop="16dp"
                android:id="@+id/progressBar"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/btn_pruebascajanegra"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Pruebas Unitarias"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btn_pruebasdevolumen"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Pruebas De Volumen"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btn_pruebassobrecarga"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Pruebas de Sobrecarga"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@drawable/border" />

            <ProgressBar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/progress_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
